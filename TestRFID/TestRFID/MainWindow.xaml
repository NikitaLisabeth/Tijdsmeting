<Window x:Class="TestRFID.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox Name="txbCode"  Margin="10" />
        <TextBox Name="txbAscii" Margin="10" Grid.Row="1" />
        <Image x:Name="imgScreen" Grid.Column="0" Grid.Row="2" Grid.RowSpan="2" Margin="5" Grid.ColumnSpan="2"/>
        <Button Grid.Column="1" Grid.Row="1" Content="Take picture" Margin="149.8,10,10.4,10" Click="Button_Click_1"  />
        <Button Grid.Column="1" Content="ASCII" Margin="10" Click="Button_Click" />
        <Button Grid.Column="1" Grid.Row="1" Content="set camera" Margin="9.8,10,150.4,10" Click="Button_Click_2"  />
    </Grid>
</Window>
